{
  "App": {
    "ApplicationName": "Lablab Bean Console",
    "Logging": {
      "EnableConsole": false,
      "EnableFile": true,
      "FilePath": "logs/lablab-bean-.log",
      "MinimumLevel": "Information"
    },
    "Version": "0.1.0"
  },
  "Plugins": {
    "HotReload": false,
    "Paths": [
      "plugins",
      "../../../plugins"
    ],
    "Profile": "dotnet.console"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "LablabBean.Plugins": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "path": "logs/lablab-bean-.log",
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day"
        },
        "Name": "File"
      }
    ]
  }
}
