<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\framework\LablabBean.Core\LablabBean.Core.csproj" />
    <ProjectReference Include="..\..\framework\LablabBean.Infrastructure\LablabBean.Infrastructure.csproj" />
    <ProjectReference Include="..\..\framework\LablabBean.Reactive\LablabBean.Reactive.csproj" />
    <ProjectReference Include="..\..\framework\LablabBean.Plugins.Core\LablabBean.Plugins.Core.csproj" />
    <ProjectReference Include="..\LablabBean.Game.SadConsole\LablabBean.Game.SadConsole.csproj" />

    <!-- Reporting framework -->
    <ProjectReference Include="..\..\framework\LablabBean.Reporting.Contracts\LablabBean.Reporting.Contracts.csproj" />
    <ProjectReference Include="..\..\framework\LablabBean.Reporting.Analytics\LablabBean.Reporting.Analytics.csproj" />

    <!-- Reporting plugins (for export) -->
    <ProjectReference Include="..\..\plugins\LablabBean.Plugins.Reporting.Html\LablabBean.Plugins.Reporting.Html.csproj" />
    <ProjectReference Include="..\..\plugins\LablabBean.Plugins.Reporting.Csv\LablabBean.Plugins.Reporting.Csv.csproj" />

    <!-- Source generator for auto-registration -->
    <ProjectReference Include="..\..\framework\LablabBean.SourceGenerators.Reporting\LablabBean.SourceGenerators.Reporting.csproj"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(WINDOWS_DX)' == 'true'">
      <PropertyGroup>
        <DefineConstants>$(DefineConstants);WINDOWS_DX</DefineConstants>
        <UseWPF>false</UseWPF>
        <UseWindowsForms>false</UseWindowsForms>
        <TargetFramework>net8.0-windows</TargetFramework>
      </PropertyGroup>
      <ItemGroup>
        <PackageReference Include="SadConsole" />
        <PackageReference Include="SadConsole.Host.MonoGame" />
        <PackageReference Include="MonoGame.Framework.WindowsDX" Version="3.8.4" />
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="Microsoft.Extensions.Configuration" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="Serilog" />
      </ItemGroup>
      <ItemGroup>
        <ProjectReference Include="..\..\windows-ui\NoesisGUI.MonoGameWrapper\NoesisGUI.MonoGameWrapper.csproj" />
        <ProjectReference Include="..\..\windows-ui\LablabBean.UI.Noesis\LablabBean.UI.Noesis.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="SadConsole" />
        <PackageReference Include="SadConsole.Host.MonoGame" />
        <PackageReference Include="MonoGame.Framework.DesktopGL" />
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="Microsoft.Extensions.Configuration" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="Serilog" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
