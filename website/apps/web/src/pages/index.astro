---
import Layout from '../layouts/Layout.astro';
import Terminal from '../components/Terminal';
---

<Layout title="Lablab Bean - Terminal">
  <main class="h-screen flex flex-col bg-gray-900">
    <header class="bg-gray-800 border-b border-gray-700 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Lablab Bean Terminal</h1>
      <p class="text-gray-400 text-sm mt-1">Web-based terminal with xterm.js and node-pty</p>
    </header>
    
    <div class="flex-1 p-4">
      <Terminal client:load />
    </div>
  </main>
</Layout>
