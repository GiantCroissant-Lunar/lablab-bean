{
  "description": "Lablab Bean monorepo workspace",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.5",
    "pm2": "^5.3.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "name": "lablab-bean-workspace",
  "packageManager": "pnpm@8.15.0",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @lablab-bean/web build",
    "build:all": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm --filter @lablab-bean/web dev",
    "dev:all": "pnpm --parallel dev",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md,astro}\"",
    "lint": "pnpm -r lint",
    "pm2": "pm2",
    "pm2:dev": "pm2 start ../build/config/ecosystem.development.config.js",
    "pm2:dev-delete": "pm2 delete ecosystem.development.config.js",
    "pm2:dev-restart": "pm2 restart ecosystem.development.config.js",
    "pm2:dev-stop": "pm2 stop ecosystem.development.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:prod": "pm2 start ecosystem.production.config.js",
    "pm2:prod-delete": "pm2 delete ecosystem.production.config.js",
    "pm2:prod-restart": "pm2 restart ecosystem.production.config.js",
    "pm2:prod-stop": "pm2 stop ecosystem.production.config.js",
    "pm2:status": "pm2 status",
    "preview": "pnpm --filter @lablab-bean/web preview",
    "stack:dev": "pm2 start ../build/config/ecosystem.development.config.js && pm2 logs",
    "stack:prod": "pm2 start ecosystem.production.config.js && pm2 logs",
    "stack:status": "pm2 status",
    "stack:stop": "pm2 stop all",
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:ui": "playwright test --ui"
  },
  "version": "0.1.0"
}
