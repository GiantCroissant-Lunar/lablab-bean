{
  "$ref": "#/definitions/build",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "build": {
      "properties": {
        "Configuration": {
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "type": "string"
        },
        "Continue": {
          "description": "Indicates to continue a previously failed build attempt",
          "type": "boolean"
        },
        "Help": {
          "description": "Shows the help text for this build assembly",
          "type": "boolean"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ],
          "type": "string"
        },
        "NoLogo": {
          "description": "Disables displaying the NUKE logo",
          "type": "boolean"
        },
        "Partition": {
          "description": "Partition to use on CI",
          "type": "string"
        },
        "Plan": {
          "description": "Shows the execution plan (HTML)",
          "type": "boolean"
        },
        "Profile": {
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "Root": {
          "description": "Root directory during build execution",
          "type": "string"
        },
        "Skip": {
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "enum": [
              "BuildWebsite",
              "Clean",
              "Compile",
              "GenerateReports",
              "GenerateWindowsMetrics",
              "PrintVersion",
              "Publish",
              "PublishAll",
              "PublishConsole",
              "PublishWindows",
              "Release",
              "ReleaseConsole",
              "Restore",
              "Test",
              "TestWithCoverage",
              "VerifyArtifact"
            ],
            "type": "string"
          },
          "type": "array"
        },
        "Solution": {
          "description": "Path to a solution file that is automatically loaded",
          "type": "string"
        },
        "Target": {
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "enum": [
              "BuildWebsite",
              "Clean",
              "Compile",
              "GenerateReports",
              "GenerateWindowsMetrics",
              "PrintVersion",
              "Publish",
              "PublishAll",
              "PublishConsole",
              "PublishWindows",
              "Release",
              "ReleaseConsole",
              "Restore",
              "Test",
              "TestWithCoverage",
              "VerifyArtifact"
            ],
            "type": "string"
          },
          "type": "array"
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ],
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "title": "Build Schema"
}
