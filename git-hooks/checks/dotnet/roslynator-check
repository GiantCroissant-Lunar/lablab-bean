#!/bin/bash
# Roslynator code analysis check

set -e

echo "Running Roslynator code analysis..."

if ! command -v dotnet &> /dev/null; then
    echo "? dotnet not found"
    exit 0
fi

# Check if we have .NET files
DOTNET_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cs|csproj|sln)$' || true)

if [ -z "$DOTNET_FILES" ]; then
    echo "No .NET files to analyze"
    exit 0
fi

# Check if Roslynator tool is available (skip if not; avoid network install in restricted envs)
if ! dotnet tool list -g | grep -q roslynator; then
    echo "Roslynator CLI not installed; skipping analysis (non-blocking)."
    exit 0
fi

# Extra guard: some environments do not expose 'dotnet roslynator' shim even if listed
if ! dotnet roslynator --help >/dev/null 2>&1; then
    echo "Roslynator CLI not available on PATH; skipping analysis."
    exit 0
fi

# Run Roslynator analysis
cd dotnet
dotnet roslynator analyze --severity-level info --verbosity diagnostic

if [ $? -eq 0 ]; then
    echo "? Roslynator analysis passed"
else
    echo "? Roslynator analysis failed"
    echo "Run 'dotnet roslynator fix' to automatically fix issues, or review the analysis output above"
    echo "See https://josefpihrt.github.io/docs/roslynator/cli/category/commands/ for more Roslynator commands"
    exit 1
fi
