#!/bin/bash
# .NET code formatting check

set -e

echo "Running dotnet format check..."

if ! command -v dotnet &> /dev/null; then
    echo "⚠ dotnet not found"
    exit 0
fi

# Check if we have .NET files
DOTNET_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cs|csproj|sln)$' || true)

if [ -z "$DOTNET_FILES" ]; then
    echo "No .NET files to format"
    exit 0
fi

# Run dotnet format (whitespace only). Limit to staged C# files under dotnet/.
cd dotnet
INCLUDE_LIST=()
while IFS= read -r file; do
  if [[ "$file" == dotnet/* && "$file" == *.cs ]]; then
    rel=${file#dotnet/}
    INCLUDE_LIST+=("$rel")
  fi
done < <(printf '%s\n' "$DOTNET_FILES")
if [ ${#INCLUDE_LIST[@]} -eq 0 ]; then
  echo "No C# files staged under dotnet to check"
  exit 0
fi
dotnet format whitespace --verify-no-changes --verbosity minimal --include "${INCLUDE_LIST[@]}"

if [ $? -eq 0 ]; then
    echo "✓ .NET formatting check passed"
else
    echo "✗ .NET formatting check failed"
    echo "Run 'dotnet format' or 'task dotnet-format' to fix formatting issues"
    exit 1
fi
